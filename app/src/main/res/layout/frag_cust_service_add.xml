<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="utp.edu.pe.mypetsfriend.CustWelcomeActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/appbar_padding_top"
        android:background="@android:color/holo_green_dark"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@android:color/holo_green_dark"
            app:layout_scrollFlags="scroll|enterAlways"
            app:popupTheme="@style/AppTheme.PopupOverlay">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="320dp"
                    android:layout_marginBottom="10dp"
                    app:srcCompat="@mipmap/ic_launcher" />


                <TextView
                    android:id="@+id/authorTextView"
                    android:layout_width="150dp"
                    android:layout_height="25dp"
                    android:text="Marco Llapapasca"
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:layout_marginLeft="48dp"/>

                <TextView
                    android:id="@+id/phraseTextView"
                    android:layout_width="100dp"
                    android:layout_height="20dp"
                    android:text="Add Service"
                    android:textColor="@android:color/darker_gray"
                    android:layout_marginLeft="48dp"
                    android:textSize="16dp"
                    android:layout_below="@+id/authorTextView"
                    android:layout_alignParentStart="true" />

            </RelativeLayout>

        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <Button
            android:text="SAVE"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:background="@android:color/holo_green_dark"
            android:layout_width="130dp"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="34dp"
            android:layout_marginBottom="87dp"
            android:id="@+id/button2" />

        <TextView
            android:text="Service:"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="100dp"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="@android:color/darker_gray"
            android:id="@+id/textView6" />

        <TextView
            android:text="Price:"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_marginLeft="59dp"
            android:layout_marginTop="150dp"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="@android:color/darker_gray"
            android:id="@+id/textView7" />

        <TextView
            android:text="Delivery:"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_marginLeft="260dp"
            android:layout_marginTop="150dp"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="@android:color/darker_gray"
            android:id="@+id/textView11" />

        <TextView
            android:text="Date:"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_marginLeft="59dp"
            android:layout_marginTop="200dp"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="@android:color/darker_gray"
            android:id="@+id/textView8" />

        <TextView
            android:text="Time:"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_marginLeft="59dp"
            android:layout_marginTop="250dp"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="@android:color/darker_gray"
            android:id="@+id/textView9" />
       <TextView
            android:text="Select Pets:"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_marginLeft="59dp"
            android:layout_marginTop="300dp"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="@android:color/darker_gray"
            android:id="@+id/textView10" />


        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar_bottom"
            android:layout_marginTop="511dp"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@android:color/holo_green_dark"
            app:layout_scrollFlags="scroll|enterAlways"
            app:popupTheme="@style/AppTheme.PopupOverlay">

        </android.support.v7.widget.Toolbar>

        <Button
            android:text="History"
            android:textColor="@android:color/white"
            android:background="@android:color/holo_green_dark"
            android:layout_width="100dp"
            android:layout_height="55dp"
            android:textStyle="bold"
            android:textSize="16dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="17dp"
            android:id="@+id/button5" />

        <CheckBox
            android:textSize="18dp"
            android:layout_marginLeft="335dp"
            android:layout_marginBottom="391dp"
            android:layout_width="28dp"
            android:layout_height="10dp"
            android:id="@+id/checkBox"
            android:layout_alignParentBottom="true"
            android:layout_alignTop="@+id/textView7" />

        <ExpandableListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="100dp"
            android:layout_marginBottom="442dp"
            android:layout_marginLeft="120dp"
            android:layout_marginRight="24dp"
            android:id="@+id/expandableListView" />

        <EditText
            android:layout_width="120dp"
            android:layout_marginRight="100dp"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="150dp"
            android:layout_height="30dp"
            android:inputType="textPersonName"

            android:id="@+id/editText2"
            />

        <Button
            android:text="Pic Date"
            android:textColor="@android:color/white"
            android:layout_marginTop="196dp"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:background="@android:color/holo_green_dark"
            android:id="@+id/button6"
            android:layout_toEndOf="@+id/textView8"

            />

        <Button
            android:text="Pic Time"
            android:textColor="@android:color/white"
            android:layout_marginTop="250dp"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:background="@android:color/holo_green_dark"
            android:id="@+id/button7"
            android:layout_toEndOf="@+id/textView8"

            />

        <Button
            android:text="Pets"
            android:textStyle="bold"
            android:textSize="16dp"
            android:layout_width="100dp"
            android:layout_height="55dp"
            android:textColor="@android:color/white"
            android:background="@android:color/holo_green_dark"
            android:id="@+id/button3"
            android:layout_alignParentBottom="true"
            android:layout_alignEnd="@+id/textView6" />

        <Button
            android:text="Services"
            android:layout_width="100dp"
            android:layout_height="55dp"
            android:textStyle="bold"
            android:textSize="16dp"
            android:textColor="@android:color/white"
            android:background="@android:color/holo_green_dark"
            android:id="@+id/button4"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />


    </RelativeLayout>
    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/appbar"
        android:layout_marginBottom="135dp"
        android:layout_marginLeft="62dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="260dp" />


</RelativeLayout>